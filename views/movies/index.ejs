<%# include relative path to the partials file %>
<% include ../partials/header.ejs  %>
<h1>ALL Movies Details</h1>

<h2>
  <%= name %>
</h2>

<h3>Using basic for loop</h3>
<ul>
    <% for (var i = 0; i < moviesArr.length; i++) { %>
      <li>
        Movie Name: <%= moviesArr[i].name %><br>
        Movie Year: <%= moviesArr[i].year %><br>
        Movie Rating: <%= moviesArr[i].rating %>
        <br><br>
      </li>
    <% } %>
</ul>

<h3>Using foreach</h3>
<ul>
    <% moviesArr.forEach(function(movie) { %>
      <li>
        Movie Name: <%= movie.name %><br>
        Movie Year: <%= movie.year %><br>
        Movie Rating: <%= movie.rating %>
        <br><br>
      </li>
    <% }) %>
</ul>

